# =========================================
# CPE Management Platform - Environment Variables
# =========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =========================================
# Flask Configuration
# =========================================
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=your-super-secret-key-min-32-chars-long
PORT=5000

# =========================================
# Session & Security
# =========================================
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_HOURS=1

# =========================================
# Rate Limiting
# =========================================
RATE_LIMIT_DEFAULT=200 per day, 50 per hour
RATE_LIMIT_STORAGE=memory://

# =========================================
# Firebase Configuration
# =========================================
GOOGLE_API_TOKEN={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project

# =========================================
# n8n Integration (Optional - for automation)
# =========================================
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# =========================================
# Email / SendGrid (Optional - for notifications)
# =========================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourplatform.com

# =========================================
# Slack Integration (Optional - for admin alerts)
# =========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token

# =========================================
# Observability (Optional)
# =========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/123456
LOG_LEVEL=INFO

# =========================================
# Database & Storage
# =========================================
FIRESTORE_EMULATOR_HOST=  # Leave empty for production; use localhost:8080 for local testing
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# =========================================
# Development / Testing
# =========================================
TESTING=False
DEBUG_SQL=False
